@if (ShowDialog)
{
    <div class="modal fade show d-block rodjo" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="profile-nav">
                    <div class="panel">
                        <div class="user-heading">
                            <a href="#">
                                <img src="@thumbnail" alt="">
                            </a>

                            <div class="section_heading text-center wow fadeInUp">
                                <h3><span>@User.FirstName </span> @User.LastName</h3>
                                <p>@User.Email</p>
                            </div>

                        </div>

                        <div class="d-flex justify-content-center">
                            <a class="btn btn-secondary position-relative" href="#"> <i class="fa fa-user"></i> Edit Profile</a>
                            <a class="btn btn-secondary position-relative" href="#"> <i class="fa fa-calendar"></i> Messages <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">9</span></a>
                        </div>

                        <div class="row justify-content-center">
                            <div class="col-12 col-sm-8 col-lg-6 p-3">
                                <div class="section_heading text-center wow fadeInUp">
                                    <a class="btn btn-outline-primary" @onclick="@Close">Close</a>
                                    @*<a class="btn btn-outline-danger" @onclick="@Logout">Sign out</a>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}